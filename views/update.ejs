<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Crud</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <form action="/update" method="post">
            <div class="col-12">
                <div class="row">
                    <div class="col-12 text-center">
                        <p>Form</p>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Email address</label>
                        <input type="text" class="form-control" name="email" value="<%= single.email %>" >
                        <input type="hidden" class="form-control" name="id" value="<%= single._id %>" >
                      </div>
                      <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Name</label>
                        <input type="text" class="form-control" name="name" value="<%= single.name %>" >
                      </div>
                      <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">City</label>
                        <input type="text" class="form-control" name="city" value="<%= single.city %>" >
                      </div>
                      <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Gender</label>
                        Male<input type="radio"  name="gender" value="Male" <% if (single.gender=='Male') { %>
                         checked
                        <% } %>>
                        Female<input type="radio"  name="gender" value="Female" <% if (single.gender=='Female') { %>
                          checked
                         <% } %>>
                      </div>
                      
                      <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">textarea</label>
                        <textarea class="form-control" name="text" rows="3"><%= single.text %></textarea>
                      </div>
                      <div class="mb-3">
                        <input type="submit" class="btn btn-primary" value="Update" name="submit" />
                      </div>
            </div>
            </div>
        </form>
        <%= JSON.stringify(single) %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>